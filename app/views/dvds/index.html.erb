<div class="content-box">
  <h1><%= @user.name %>'s DVDs</h1>
  <%= link_to "Add a DVD", new_dvd_path %>
</div>

<div class="itemList row small-up-1 medium-up-2 large-up-4">
  <% @dvds.each do |dvd| %>
    <% class_name = "column list-item-box" %>
    <% if dvd == @dvds.last %>
      <% class_name += " end" %>
    <% end %>
    <div key=<%= dvd.id %> class=<%= class_name %>>
      <%= link_to(dvd) do %>
        <div class="list-item-content">
          <p><%= dvd.title %></p>
          <div>
            <img src=<%= dvd.image_small %> alt="no image" class="index-item-image-box"/>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
