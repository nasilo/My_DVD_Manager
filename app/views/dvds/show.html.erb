<div class="dvd-content">
  <%= render 'layouts/navbar' %>
  <div class="content-box row">
    <h1><%= @dvd.title %> </h1>
    <div class="small-6 column text-left">
      <p><b>Synopsis:</b> <%= @dvd.synopsis %> </p>
      <p><b>Cast:</b> <%= @dvd.cast %> </p>
      <p><b>Director:</b> <%= @dvd.director %> </p>
      <p><b>Writer:</b> <%= @dvd.writer %> </p>
      <p><b>Producer:</b> <%= @dvd.producer %> </p>
      <p><b>Studio:</b> <%= @dvd.studio %> </p>
      <p><b>Rating:</b> <%= @dvd.mpaa_rating %> </p>
      <p><b>Movie Length:</b> <%= @dvd.run_time %> </p>
      <p><b>Dvd Release Date:</b> <%= @dvd.release_date %> </p>
      <p><b>Dvd Added:</b> <%= @dvd.created_at %> </p>
    </div>
    <div class="small-6 column">
      <img src=<%= @dvd.image_large %> />
      <div class="text-left">
        <p><b>User Rating:</b> <%= @dvd.user_rating %> </p>
        <p><b>Purchase Price:</b> <%= @dvd.purchase_price %> </p>
        <% if !@dvd.location.nil? %>
          <p><b>Purchase Location:</b> <%= @dvd.location.name %> </p>
        <% else %>
          <p><b>Purchase Location:</b></p>
        <% end %>
        <% if @user_can_change %>
          <%= link_to "Edit", edit_user_dvd_path(@user, @dvd), class: "button secondary" %>
          <%= link_to 'Delete', [@user, @dvd], method: :delete,
            data: { confirm: "Are you sure?" }, class: "button secondary" %>
        <% end %>
        <%= link_to "Back", user_dvds_path(@user), class: "button secondary" %>
      </div>
    </div>
  </div>
</div>-
